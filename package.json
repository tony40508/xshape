{
  "name": "xshape",
  "version": "0.0.5",
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "dist/lib/main.d.ts",
  "main": "./dist/xshape.umd.cjs",
  "module": "./dist/xshape.js",
  "exports": {
    ".": {
      "import": "./dist/xshape.js",
      "require": "./dist/xshape.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --mode prod",
    "preview": "vite preview"
  },
  "dependencies": {
    "@xstate/react": "^3.0.1",
    "dequal": "^2.0.3",
    "konva": "^8.3.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^18.2.3",
    "use-image": "^1.1.0",
    "xshape": "latest",
    "xstate": "^4.34.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-syntax-flow": "^7.14.5",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^2.2.0",
    "eslint": "^8.0.0",
    "eslint-config-react-app": "^7.0.1",
    "path": "^0.12.7",
    "typescript": "^4.6.4",
    "vite": "^3.2.3",
    "vite-plugin-dts": "^1.7.2"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "*.d.ts"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 110,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tony40508/xshape.git"
  },
  "keywords": [
    "react",
    "typescript",
    "konvajs",
    "xstate"
  ],
  "author": "Wei Chen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tony40508/xshape/issues"
  },
  "homepage": "https://github.com/tony40508/xshape#readme"
}
